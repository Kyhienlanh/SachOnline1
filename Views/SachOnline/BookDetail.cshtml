
@{
    ViewBag.Title = "BookDetail";
}
<style>
    .giaban{
        color:blue;
    }
</style>
<div class="navbar">
    <div class="navbar-collapse">
        <div class="thumbnail" style="background-image: linear-gradient(cornflowerblue, white)">
            <div>
                <h4 class="tensach" style="text-align:center; color:red; font-size:30px; font-weight:700;">
                    @Model.TenSach
                </h4>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <img src="~/Images/@Model.AnhBia" alt="@Model.TenSach">
        <div class="motasach">
            <p>
                @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp")))
            </p>

        </div>
        <p class="ngaycapnhat">Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")</p>
        <p class="giaban">Giá bán <span>@(String.Format("{0:#,##0}", Model.GiaBan)) VNĐ</span></p>
        <p class="addtocard">
            <a href="@Url.Action("ThemGioHang","GioHang", new { ms = Model.MaSach, url = Request.Url.ToString() })"
               class="btn btn-primary" role="button">

                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart
            </a>
        </p>
    </div>
</div>
