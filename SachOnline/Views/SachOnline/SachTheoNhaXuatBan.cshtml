@using SachOnline.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SACH>
@{
    ViewBag.Title = "SachTheoNhaXuatBan";
}

<h2 class="text-center">SÁCH THEO NHÀ XUẤT BẢN</h2>
<hr>
<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@item.AnhBia" alt="@item.TenSach" class="img- responsive img-rounded imgbook">
                <div class="caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("BookDetail","SachOnline", new { id = item.MaSach})">@item.TenSach</a>
                    </h4>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria- hidden="true"></span> Add to Cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<p>Page @(Model.PageNumber) of @(Model.PageCount)</p>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("SachTheoChuDe", new
    {
        iMaCD = ViewBag.MaCD,
        page = page
    }))
</div>
<br />

